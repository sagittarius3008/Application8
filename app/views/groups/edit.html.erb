<div class='container'>
  <div class='row'>
    <div class="col-6 mx-auto">
      <h2>Editing Group</h2>
      <!--<#%= render 'form', group: @group %>-->
      <%= form_with model:@group, local:true,method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name,class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.attachment_field :image, class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Group", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>