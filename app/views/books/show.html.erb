<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
        <!--投稿詳細画面-->
      <div id = "book-detail">
        <%= render "books/detail", book: @bookshow %>
      </div>
      
      <div>
        <%= form_with(model:[@bookshow, @book_comment]) do |f| %>
          <%= f.text_area :comment,id:"new_comment",rows:'6',placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
          <!--<#%= render partial: "book_comments/comment_form", book: @book %>-->
      <div id="book-table">
        <%= render "book_comments/comment_form", book_comments: @bookshow.book_comments %>
      </div>
    </div>
  </div>
</div>