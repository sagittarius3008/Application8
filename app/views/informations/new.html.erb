<div class='container'>
  <div class='row'>
    <div class="col-6 mx-auto">
      <h2>Event Mail</h2>
      <%= form_with model:@information,local:true,url: {action: 'create'}, method: :post  do |f| %>
        <div class="form-group">
          <%= f.label :title%>
          <%= f.text_field :title,class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>