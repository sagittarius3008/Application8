<div class="confirmPage">
  <div class='container'>
    <h1 class="confirmPage_title">お問い合わせ内容</h1>
    <%= form_with model: @information, url: inquiries_thanks_path, method: :post, local: true do |f| %>
      <div class="confirmForm_item">
        <h3>社会の窓が空いている人のお名前</h3>
        <div>
          <%= f.hidden_field :title %>
          <%= @information.title %>
        </div>
      </div>
      <div class="confirmForm_item">
          <%= @information.content %>
          <%= f.hidden_field :content %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "入力画面に戻る", root_path, class: "btn btn-info"%>
        <%= f.submit '送信する', :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>